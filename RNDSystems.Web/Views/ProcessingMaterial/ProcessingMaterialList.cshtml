@model RNDProcessing
@{
    ViewBag.Title = "ProcessingMaterialList";
}

<div class="panel-heading">Processing Material List</div>
<div class="panel-body">
    <div id="searchDiv" class="container">
        <div class="row">
            <div class="col-md-3 pull-right">
                <button id="btnBack" onclick="window.history.back();" class="btn btn-primary btn-large"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back</button>
            </div>
            <div class="col-md-3">
                <button id="btnAddProcess" class="btn btn-success btn-large"><i class="fa fa-plus" aria-hidden="true"></i> Create New Process</button>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <label for="searchWorkStudyNumber" class="cols-sm-2 control-label">Work Study Number</label>
                <div class="cols-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-book" aria-hidden="true"></i></span>
                        <input type="text" value="@Model.WorkStudyID" id="searchWorkStudyNumber" name="searchWorkStudyNumber" class="form-control" placeholder="Enter Work Study Number" />
                        <input type="hidden" name="WorkStudyID" id="WorkStudyID" value="@Model.WorkStudyID" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label for="ddMillLotNo" class="cols-sm-2 control-label">Mill Lot Number</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-search" aria-hidden="true"></i></span>
                            @Html.DropDownList("ddMillLotNo", ViewBag.ddMillLotNo as IEnumerable<SelectListItem>, new { @class = "show-tick form-control" })
                        </div>
                    </div>
                    <input type="hidden" name="MillLotNo" id="MillLotNo" value="@Model.MillLotNo" />
                </div>
            </div>
      </div>
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label for="HTLogID" class="cols-sm-2 control-label">HTLogID</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-search" aria-hidden="true"></i></span>
                            @Html.DropDownList("ddHTLogID", ViewBag.ddHTLogID as IEnumerable<SelectListItem>, new { @class = "show-tick form-control" })
                        </div>
                    </div>
                    <input type="hidden" name="ddHTLogID" id="ddHTLogID" value="@Model.ddHTLogID" />
                </div>
            </div>
            <div class="col-md-3">
                <button id="btnHTGroup" class="btn btn-success btn-large"><i class="fa fa-plus" aria-hidden="true"></i> Add selected HTLoad to Group</button>
            </div>
            <div class="col-md-3">
                <button id="btnNewHTGroup" class="btn btn-success btn-large"><i class="fa fa-plus" aria-hidden="true"></i> Add new HTLoad to Group</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label for="AgeLotID" class="cols-sm-2 control-label">AgeLotID</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-search" aria-hidden="true"></i></span>
                            @Html.DropDownList("ddAgeLotID", ViewBag.ddAgeLotID as IEnumerable<SelectListItem>, new { @class = "show-tick form-control" })
                        </div>
                    </div>
                    <input type="hidden" name="ddAgeLotID" id="ddAgeLotID" value="@Model.ddAgeLotID" />
                </div>
            </div>
            <div class="col-md-3">
                <button id="btnAgeGroup" class="btn btn-success btn-large"><i class="fa fa-plus" aria-hidden="true"></i> Add selected Age to Group</button>
            </div>
            <div class="col-md-3">
                <button id="btnNewAgeGroup" class="btn btn-success btn-large"><i class="fa fa-plus" aria-hidden="true"></i> Add new Age to Group</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="" class="cols-sm-2 control-label"></label>
                    <div class="cols-sm-10">
                        <button id="btnSearch" class="btn btn-primary btn-large"><i class="fa fa-search" aria-hidden="true"></i> Search</button>
                        &nbsp;&nbsp;&nbsp;
                        <button id="btnClear" class="btn btn-primary btn-large"><i class="fa fa-times" aria-hidden="true"></i> Clear</button>
                    </div>
                </div>
            </div>
        </div>
        </div>
    @{Html.RenderPartial("_Repeater", "ProcessingMaterialRepeater");}

</div>
@section scripts{
    @Scripts.Render("~/bundles/ProcessingMaterial")
    <script>
        $(document).ready(function () {
            LoadGrid("ProcessingMaterialRepeater");
        });
    </script>
}

